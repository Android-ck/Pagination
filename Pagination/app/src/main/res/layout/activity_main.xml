<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>

        <variable
            name="viewModel"
            type="com.zerir.networking.presentation.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.MainActivity">

        <TextView
            android:id="@+id/connection_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_dark"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="@string/connection_lost"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone"
            android:visibility="@{viewModel.networkConnection.connected == true ? View.GONE : View.VISIBLE}"
            android:gravity="center"
            android:maxLines="1"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/planets_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/connection_tv"
            app:adapter="@{viewModel.planetAdapter}"
            tools:itemCount="3"
            tools:listitem="@layout/row_planet_item" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>